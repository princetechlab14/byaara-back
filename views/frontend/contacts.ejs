<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partial/head") %>
</head>

<body class="min-h-screen flex flex-col">
    <%- include("./partial/header") %>
        <main class="flex-grow">
            <section class="bg-gray-50 py-8 antialiased dark:bg-gray-900 md:py-12">
                <div class="mx-auto max-w-screen-xl px-4 2xl:px-0">
                    <div class="mb-4 items-end justify-between space-y-4 sm:flex sm:space-y-0 md:mb-8">
                        <div>
                            <h2 class="mt-3 text-2xl font-semibold text-gray-900 dark:text-white sm:text-2xl">
                                Contact</h2>
                        </div>
                    </div>

                    <form class="mx-auto" action="/contact" method="post">
                        <div class="grid md:grid-cols-2 md:gap-6">
                            <div class="mb-5">
                                <input type="text" id="name" name="name"
                                    class="bg-gray-50 border border-gray-900 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                    placeholder="Name" />
                            </div>
                            <div class="mb-5">
                                <input type="email" id="email" name="email"
                                    class="bg-gray-50 border border-gray-900 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                    placeholder="Email *" />
                            </div>
                        </div>
                        <div class="mb-5">
                            <input type="text" id="phone" name="phone"
                                class="bg-gray-50 border border-gray-900 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                placeholder="Phone Number" />
                        </div>
                        <div class="mb-5">
                            <textarea id="message" rows="4" name="message"
                                class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 border border-gray-900 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                placeholder="Message"></textarea>
                        </div>
                        <button type="submit"
                            class="text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded w-full sm:w-auto px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800">Send</button>
                    </form>
                </div>
            </section>
        </main>
        <%- include("./partial/footer") %>
</body>

</html>